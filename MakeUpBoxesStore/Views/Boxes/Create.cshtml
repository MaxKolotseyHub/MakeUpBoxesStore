@model MakeUpBoxesStore.Models.Box
<link href="~/Content/myGrid.css" rel="stylesheet" />

<h2>Новый бокс</h2>

<div class="container w-100">
    <div>
        @using (Html.BeginForm("Create","Boxes",FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="card card-body">
                <div class="d-flex align-items-center justify-content-center p-3 py-5 mb-2 bg-light rounded" style="font-size: 10em">
                    <svg class="bi bi-inbox-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M3.81 4.063A1.5 1.5 0 014.98 3.5h6.04a1.5 1.5 0 011.17.563l3.7 4.625a.5.5 0 01-.78.624l-3.7-4.624a.5.5 0 00-.39-.188H4.98a.5.5 0 00-.39.188L.89 9.312a.5.5 0 11-.78-.624l3.7-4.625z" clip-rule="evenodd"></path>
                        <path fill-rule="evenodd" d="M.125 8.67A.5.5 0 01.5 8.5h5A.5.5 0 016 9c0 .828.625 2 2 2s2-1.172 2-2a.5.5 0 01.5-.5h5a.5.5 0 01.496.562l-.39 3.124a1.5 1.5 0 01-1.489 1.314H1.883a1.5 1.5 0 01-1.489-1.314l-.39-3.124a.5.5 0 01.121-.393z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="form-horizontal">

                    <hr />
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-lg-2" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-lg-8 " } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="col-lg-1">
                            <input type="submit" value="Сохранить" class="btn btn-outline-primary" />
                        </div>
                    </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>