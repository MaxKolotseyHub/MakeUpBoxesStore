@model MakeUpBoxesStore.Models.Box

@{
    ViewBag.Title = "Index";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <p>Список товаров</p>
    <dl class="dl-horizontal">
        <dd>
            <table class="table">
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                </tr>
                <tr>
                    @foreach (var prod in Model.ProductCount)
                    {
                        <th>@prod.Key.Title</th>
                        <th>@prod.Value</th>
                        <th>@Html.ActionLink("Удалить", "Remove", new { id = Model.Id, pId = prod.Key.Id }, new { @class = "btn btn-outline-danger"})</th>
                    }
                </tr>
            </table>
        </dd>
    </dl>
    <div class="form-group">
        @Html.ActionLink("Оформить заказ", "Create", "Purchases", new { id=Model.Id}, new { @class = "btn btn-primary"})
    </div>
</div>
